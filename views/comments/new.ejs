<% include ../partials/header %>
<h1>NEW comment form!</h1>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Add new Comment to <%= course.name %></h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/courses/<%= course._id %>/comments" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/courses">Go back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>