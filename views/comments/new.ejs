<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Add new Comment to <%= course.name %></h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/courses/<%= course._id %>/comments" method = "POST">
                <div class="form-group">
                    <p>Comment</p>
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <p>How many hours do you spend every week?</p>
                    <input class="form-control" type="text" name="comment[workload]" placeholder="hrs/week">
                </div>
                <div class="form-group">
                    <p>How would you rate the difficulty?</p>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="comment[difficulty]" id="inlineRadio1" value=1>
                      <label class="form-check-label" for="inlineRadio1">Blow off</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="comment[difficulty]" id="inlineRadio2" value=2>
                      <label class="form-check-label" for="inlineRadio2">Easy</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="comment[difficulty]" id="inlineRadio3" value=3>
                      <label class="form-check-label" for="inlineRadio3">Moderate</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="comment[difficulty]" id="inlineRadio4" value=4>
                      <label class="form-check-label" for="inlineRadio4">Challenging</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="comment[difficulty]" id="inlineRadio5" value=5>
                      <label class="form-check-label" for="inlineRadio5">Hard</label>
                    </div>
                </div>
                <div class="form-group">
                    <p>How would you rate this class overall?</p>
                    <select name="comment[rating]">
                        <option value=1>BAD</option>
                        <option value=2>So-So</option>
                        <option value=3>Good</option>
                        <option value=4>Great</option>
                        <option value=5>AWESOME!</option>
                    </select>
                </div>
                <div class="form-group">
                    <p>Who is your professor for this class?</p>
                    <select name="comment[professor]">
                        <%course.histories.forEach(function(history) {%>
                            <option value='<%=history.prof_name%>'><%=history.prof_name%></option>
                        <%})%>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/courses">Go back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>